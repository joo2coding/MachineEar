<UserControl x:Class="client_supervisor.ClientPin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:client_supervisor"
             mc:Ignorable="d" 
             d:DesignHeight="15" d:DesignWidth="15" Width="15" Height="15">
    <Grid Margin="0,0,15,15">
        <Ellipse x:Name="pin_icon" Margin="0,0,-15,-15" Stroke="White" Panel.ZIndex="0" StrokeThickness="3"
                 Cursor="Hand" MouseLeftButtonDown="pin_icon_MouseLeftButtonDown"
                 Fill="Transparent"/>

    </Grid>
</UserControl>
