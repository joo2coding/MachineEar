<Window x:Class="MachineEar_MIC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MachineEar_MIC"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="99" Margin="78,62,0,0" VerticalAlignment="Top" Width="240">
            <Label Content="IP" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="48" HorizontalContentAlignment="Center"/>
            <Label Content="MAC" HorizontalAlignment="Left" Height="30" VerticalAlignment="Bottom" Width="48" HorizontalContentAlignment="Center"/>
            <Label Content="PORT" HorizontalAlignment="Left" Height="30" VerticalAlignment="Center" Width="48" HorizontalContentAlignment="Center"/>
            <Button x:Name="btn_connect" Content="연결" HorizontalAlignment="Left" Height="88" Margin="175,5,0,0" VerticalAlignment="Top" Width="60" Click="connect_btn_click"/>
        </Grid>
        <TextBox x:Name="textbox_ip" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="128,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25" TextChanged="TextBox_TextChanged"/>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="128,99,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Height="25"/>
        <TextBox x:Name="textbox_port" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="128,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25" TextChanged="TextBox_TextChanged_1"/>
        <TextBox x:Name="textbox_mac" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="128,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25" IsEnabled="False"/>
        <Label Content="Network Connection" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="78,22,0,0" VerticalAlignment="Top"/>
        <Label Content="Input : Sound Wave" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="78,206,0,0" VerticalAlignment="Top"/>
        <WrapPanel Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="15" Margin="233,212,0,0" VerticalAlignment="Top" Width="90">
            <RadioButton x:Name="radio_mic" Content="mic" Checked="RadioButton_Checked_1" Width="45"/>
            <RadioButton x:Name="radio_csv" Content="csv" Checked="RadioButton_Checked" Width="45"/>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Left" Height="30" Margin="70,255,0,0" VerticalAlignment="Top" Width="260" Grid.Column="1">
            <Label Content="MIC ID" HorizontalAlignment="Left" Height="30" VerticalAlignment="Bottom" Width="50" HorizontalContentAlignment="Center" RenderTransformOrigin="0.104,1.133"/>
            <ComboBox HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="130" Margin="0,0,5,0"/>
            <Button x:Name="btn_browse" Content="불러오기" HorizontalAlignment="Center" Height="26" VerticalAlignment="Top" Width="75" Click="btn_mac_connect_Click"/>
        </WrapPanel>
        <Canvas x:Name="canvas_waveform" Width="362" Height="158" Margin="17,305,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

    </Grid>
</Window>